package sec1;

public class Var02 { // scope 인지되는 범위나 시기
		int a=10, b=20; //global 변수  전역 변수
	public static void main(String[] args) {
		int a=100, b=200; //지역변수 (우선순위1) - 현재 메서드 안에서만 인식
		System.out.println("a : "+a);
		tot(a,b); //매서드 호출 
	}

	public static void tot (int f,int g){ //매개 변수 - 메서드 호출 시 인식
		System.out.println("a+b="+f+g);
	}
}
